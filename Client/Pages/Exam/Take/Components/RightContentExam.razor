@namespace SmartProctor.Client.Pages.Exam
@using SmartProctor.Shared.Responses
@inherits AntDomComponentBase

<Space Class="@ClassMapper.Class" Style="margin-right: 60px; color: white">
    <SpaceItem>
        <NewCountDown Deadline="@Deadline" SecondsBeforeAlert="600" OnEnded="OnEnded"/>
    </SpaceItem>
    <SpaceItem>
        <ExamDropdown OnCameraVideoVisibleChange="OnCameraVideoVisibleChange" 
                      OnDesktopVideoVisibleChange="OnDesktopVideoVisibleChange"/>
    </SpaceItem>
</Space>

@code {
    [Parameter]
    public DateTime Deadline { get; set; }
    
    [Parameter]
    public EventCallback OnEnded { get; set; }
    
    [Parameter]
    public EventCallback<bool> OnCameraVideoVisibleChange { get; set; }
        
    [Parameter]
    public EventCallback<bool> OnDesktopVideoVisibleChange { get; set; }
}