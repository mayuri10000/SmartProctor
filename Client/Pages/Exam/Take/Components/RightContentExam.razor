@namespace SmartProctor.Client.Pages.Exam
@using SmartProctor.Shared.Responses
@inherits AntDomComponentBase

<Space Class="@ClassMapper.Class" Style="margin-right: 60px; color: white">
    <SpaceItem>
        <NewCountDown Deadline="@Deadline" SecondsBeforeAlert="600" OnEnded="_ => OnEnded.InvokeAsync()"/>
    </SpaceItem>
    <SpaceItem>
        <ExamDropdown ExamId="@ExamId"/>
    </SpaceItem>
</Space>

@code {
    [Parameter]
    public string ExamId { get; set; }
    
    [Parameter]
    public DateTime Deadline { get; set; }
    
    [Parameter]
    public EventCallback OnEnded { get; set; }
}